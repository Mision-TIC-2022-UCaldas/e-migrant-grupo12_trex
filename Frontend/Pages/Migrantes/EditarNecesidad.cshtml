@page
@model Frontend.Pages.Migrantes.EditarNecesidadModel
@{
}




<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Marcar necesidad como Atendida [<a asp-page="Necesidades" asp-route-userNameA="@User.Identity.Name">Volver a necesidades</a>]
        <br/>
        <span class="text-danger">@ViewData["Existe"]</span>  
        @if(ViewData["Existe"] != "La solicitud no existe por favor validar")
        {
            <form method="post">
            <br/>
            <hr/>
            <br/>
            <h2>Esta seguro que desea marcar la solicitud como atendida?</h2>
            <input type="hidden" asp-for="_necesidad.Id" class="form-control" readonly />
            <input type="hidden" asp-for="_necesidad.UserId" class="form-control" readonly />
            <input type="hidden" asp-for="_necesidad.Status" class="form-control" readonly />
            <input type="hidden" asp-for="_necesidad.Prioridad" class="form-control" readonly />
            <input type="hidden" asp-for="_necesidad.Categoria" class="form-control" readonly />
            <input type="hidden" asp-for="_necesidad.Descripcion" class="form-control" readonly />
            <span class="text-danger">@ViewData["Mensaje"]</span>
            <span class="text-success">@ViewData["mensajeCreado"]</span>
            <br/>
            <br/>
            <button type="submit" class="btn btn-success btn-lg">Si, estoy Seguro</button>
        </form>
        <br/>
            <button class="btn btn-warning btn-lg"><a asp-page="Necesidades" asp-route-userNameA="@User.Identity.Name">No estoy seguro</a></button>

        }
        </h3>
        <br/>
    </div>

</div>